{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
        "simple":{
            "format":"[%(asctime)s - %(name)s:%(funcName)s():%(lineno)d] %(message)s"
        }
    },
    "handlers":{
        "console":{
            "class":"logging.StreamHandler",
            "level":"DEBUG",
            "formatter":"simple",
            "stream":"ext://sys.stdout"
        },
        "root_file_handler":{
            "class":"logging.handlers.RotatingFileHandler",
            "level":"INFO",
            "formatter":"simple",
            "filename":"log/root.log",
            "maxBytes":10485760,
            "backupCount":20,
            "encoding":"utf8"
        },
        "isearch_file_handler":{
            "class":"logging.handlers.RotatingFileHandler",
            "level":"WARNING",
            "formatter":"simple",
            "filename":"log/isearch.log",
            "maxBytes":10485760,
            "backupCount":20,
            "encoding":"utf8"
        }
    },
    "loggers":{
        "isearch":{
            "level":"WARNING",
            "handlers":["console", "isearch_file_handler"]
        }
    },
    "root":{
        "level":"INFO",
        "handlers":["root_file_handler"]
    }
}
